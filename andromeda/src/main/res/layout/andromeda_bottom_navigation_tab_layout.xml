<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_tab_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/fill_background_primary"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <co.app.food.andromeda.icons.AndromedaIconView
        android:id="@+id/bottom_navigation_tab_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="?spacing_x"
        android:focusable="false"
        app:icon_color_token="?icon_dynamic_default"
        tools:icon_name="actions_16_add" />

    <co.app.food.andromeda.text.AndromedaTextView
        android:id="@+id/bottom_navigation_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?spacing_x"
        android:layout_marginTop="?spacing_x"
        android:layout_marginRight="?spacing_x"
        android:layout_marginBottom="?spacing_x"
        android:focusable="false"
        tools:text="Title"
        android:textAlignment="center"
        android:textSize="13sp"
        app:typographyStyle="caption_moderate_book_default" />
</LinearLayout>
