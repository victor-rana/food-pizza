<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_navigation_container"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        tools:background="?attr/fill_error_primary"
        android:background="@color/andromeda_transparent">

    <co.app.food.andromeda.shadow.AndromedaShadowLayout
            android:id="@+id/shadow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:enable_shadow_bottom="false"
            app:enable_shadow_top="true"
            app:sl_type="low">

        <LinearLayout
                android:id="@+id/bottom_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/andromeda_bg_radius"
                android:orientation="horizontal" />

    </co.app.food.andromeda.shadow.AndromedaShadowLayout>

</RelativeLayout>
