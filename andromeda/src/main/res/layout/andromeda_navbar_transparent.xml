<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_root"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="?attr/spacing_4x"
    android:paddingRight="?attr/spacing_4x">

    <co.app.food.andromeda.button.AndromedaCircularButton
        android:id="@+id/transparent_navigation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:circular_btn_type="circular_secondary_regular"
        app:icon_color_token="?attr/icon_dynamic_default"
        app:icon_name="navigation_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <co.app.food.andromeda.button.AndromedaCircularButton
        android:id="@+id/transparent_navigation_menu_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:circular_btn_type="circular_secondary_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <co.app.food.andromeda.badge.AndromedaBadge
        android:id="@+id/icon_1_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/transparent_navigation_menu_icon_1"
        app:layout_constraintTop_toTopOf="@id/transparent_navigation_menu_icon_1" />

    <co.app.food.andromeda.button.AndromedaCircularButton
        android:id="@+id/transparent_navigation_menu_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="?attr/spacing_3x"
        android:visibility="gone"
        app:circular_btn_type="circular_secondary_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/transparent_navigation_menu_icon_1"
        app:layout_constraintTop_toTopOf="parent" />

    <co.app.food.andromeda.badge.AndromedaBadge
        android:id="@+id/icon_2_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/transparent_navigation_menu_icon_2"
        app:layout_constraintTop_toTopOf="@id/transparent_navigation_menu_icon_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
