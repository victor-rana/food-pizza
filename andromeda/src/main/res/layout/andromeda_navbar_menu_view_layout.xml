<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <co.app.food.andromeda.icons.AndromedaIconView
        android:id="@+id/navigation_menu_icon_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="?attr/spacing_2x"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

    <co.app.food.andromeda.badge.AndromedaBadge
        android:id="@+id/icon_1_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/navigation_menu_icon_1"
        app:layout_constraintEnd_toEndOf="@id/navigation_menu_icon_1"
        app:layout_constraintStart_toEndOf="@id/navigation_menu_icon_1"
        app:layout_constraintTop_toTopOf="@id/navigation_menu_icon_1" />

    <co.app.food.andromeda.icons.AndromedaIconView
        android:id="@+id/navigation_menu_icon_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="?attr/spacing_4x"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigation_menu_icon_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

    <co.app.food.andromeda.badge.AndromedaBadge
        android:id="@+id/icon_2_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/navigation_menu_icon_2"
        app:layout_constraintEnd_toEndOf="@id/navigation_menu_icon_2"
        app:layout_constraintStart_toEndOf="@id/navigation_menu_icon_2"
        app:layout_constraintTop_toTopOf="@id/navigation_menu_icon_2" />


</androidx.constraintlayout.widget.ConstraintLayout>
